<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logIn_image_kids"
            android:layout_width="398dp"
            android:layout_height="350dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/login_pic" />

        <ImageButton
            android:id="@+id/LogIn_Buttonkids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/LogInpassword_Text"
            app:layout_constraintTop_toBottomOf="@+id/LogInpassword_Text"
            app:srcCompat="@drawable/login_screenkids" />

        <EditText
            android:id="@+id/LogInemail_Text"
            android:layout_width="350dp"
            android:layout_height="61dp"
            android:layout_marginTop="52dp"
            android:ems="10"
            android:inputType="textPersonName"
           android:hint="Email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logIn_image_kids" />

        <EditText
            android:id="@+id/LogInpassword_Text"
            android:layout_width="350dp"
            android:layout_height="61dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Password"
            app:layout_constraintEnd_toEndOf="@+id/LogInemail_Text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/LogInemail_Text"
            app:layout_constraintTop_toBottomOf="@+id/LogInemail_Text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>