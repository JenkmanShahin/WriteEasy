<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/HomeKids_Background_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/kids_homebackground" />

        <TextView
            android:id="@+id/AlreadyRead_text"
            android:layout_width="67dp"
            android:layout_height="38dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="306dp"
            android:fontFamily="@font/risque"
            android:text="Read"
            android:textColor="#2523B7"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="401dp"
            android:layout_height="136dp"
            android:backgroundTint="#ECF8C9"
            app:layout_constraintBottom_toBottomOf="@+id/alreadyRead_recyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/alreadyRead_recyclerView"
            app:layout_constraintTop_toTopOf="@+id/alreadyRead_recyclerView"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/redframe" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alreadyRead_recyclerView"
            android:layout_width="413dp"
            android:layout_height="145dp"
            android:layout_marginTop="4dp"
            android:foregroundGravity="center_horizontal"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AlreadyRead_text"
            tools:listitem="@layout/read_list" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/risque"
            android:text="All Stories"
            android:textColor="#2523B7"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.072"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alreadyRead_recyclerView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="436dp"
            android:layout_height="373dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/HomeKids_Background_image"
            app:layout_constraintEnd_toEndOf="@+id/allStories_recyclerView"
            app:layout_constraintStart_toStartOf="@+id/allStories_recyclerView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:srcCompat="@drawable/kidsstory_menu" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allStories_recyclerView"
            android:layout_width="355dp"
            android:layout_height="366dp"
            android:layout_marginTop="4dp"
            android:foregroundGravity="center_vertical"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@+id/HomeKids_Background_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/allstories_list" />

        <ImageView
            android:id="@+id/Menu_icon"
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textInputEditText"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_segment_24" />

        <ImageButton
            android:id="@+id/saved_ButtonP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/saved_bottun" />

        <ImageButton
            android:id="@+id/home_ButtonP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/HomeKids_Background_image"
            app:layout_constraintEnd_toStartOf="@+id/Profile_Button"
            app:layout_constraintStart_toEndOf="@+id/saved_ButtonP"
            app:srcCompat="@drawable/home_kidsbutton" />

        <ImageButton
            android:id="@+id/Profile_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/profile_kidsbutton" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/Menu_icon"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="@+id/textInputEditText"
            tools:layout_editor_absoluteY="39dp">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText"
            android:layout_width="318dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:hint="Search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>