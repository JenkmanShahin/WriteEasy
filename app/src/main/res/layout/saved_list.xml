<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        tools:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/StoryAndImage_frame"
            android:layout_width="321dp"
            android:layout_height="108dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kids" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/StoryAndImage_frame"
            app:layout_constraintTop_toTopOf="@+id/StoryAndImage_frame"
            app:srcCompat="@drawable/kids_storypicframe" />

        <TextView
            android:id="@+id/Title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/risque"
            android:text="Title"
            android:textColor="#2523B7"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/StoryAndImage_frame"
            app:layout_constraintHorizontal_bias="0.328"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/StoryAndImage_frame" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="135dp"
            android:layout_height="55dp"
            android:fontFamily="@font/risque"
            android:text="Lorem ipsum dolor sit amet, consetetur sadised  invidunt ut labore"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/Title_text"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toStartOf="@+id/Title_text"
            app:layout_constraintTop_toBottomOf="@+id/Title_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>